@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>
<MudGrid Class="mt-1">
    <MudItem xs="12">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8"><MudText Typo="Typo.h6">Counter: @currentCount</MudText></MudPaper>
    </MudItem>
    
    <MudItem xs="6" sm="3">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" @onclick="DecrementCount2" />
        </MudPaper>
    </MudItem>
    <MudItem xs="6" sm="3">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" @onclick="DecrementCount" />
        </MudPaper>
    </MudItem>
    <MudItem xs="6" sm="3">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
            <MudIconButton Icon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" @onclick="IncrementCount" />
        </MudPaper>
    </MudItem>
    <MudItem xs="6" sm="3">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
            <MudIconButton Icon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" @onclick="IncrementCount2" />
        </MudPaper>
    </MudItem>
</MudGrid>
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    private void IncrementCount2()
    {
        currentCount += 2;
    }
    private void DecrementCount()
    {

        if (currentCount > 0)
        {
            currentCount --;
        }

        else
        {
            currentCount = 0;
        }
    }
    private void DecrementCount2()
    {

        if (currentCount >= 2)
        {
            currentCount -= 2;
        }
        else
        {
            currentCount = 0;
        }
    }
}
<MudGrid>
    <MudItem xs="12" sm="12">
            <MudPaper Class="background-color-none">
                <MudText Typo="Typo.h4">Hey, what’s on your mind today?</MudText>
            </MudPaper>
    </MudItem>
</MudGrid>
<MudGrid>    
    <MudItem xs="12" sm="12">
            <MudPaper Class="mud-elevation-0 background-color-none">
                <MudTextField T="string"
                              Label=""
                              Variant="Variant.Filled"
                              Lines="2"
                              MaxLines="8"
                              Placeholder="Type your message here..."
                              AutoGrow="true"
                              @bind-Value="MessageText" />

                @code {
                    private string MessageText { get; set; }
                }
        </MudPaper>
    </MudItem>
        <MudItem xs="6" sm="6" Class="pt-0 chatsend_left background-color-none">
            <MudPaper Class="justify-center mud-width-full mud-elevation-0 background-color-none">
                <MudIconButton Icon="@Icons.Material.Filled.Share" Disabled="true" aria-label="share" />
            </MudPaper>
    </MudItem>
        <MudItem xs="6" sm="6" Class="pt-0 chatsend_right background-color-none">
            <MudPaper Class="d-flex align-end justify-end mud-width-full mud-elevation-0 background-color-none">
                <MudIconButton Icon="@Icons.Material.Filled.Add" @onclick="OnAddClick" aria-label="Add" />
                <MudIconButton Icon="@Icons.Material.Filled.KeyboardVoice" @onclick="OnVoiceClick" aria-label="Voice" />
                <MudIconButton Icon="@Icons.Material.Outlined.ArrowUpward" @onclick="OnVoiceClick" aria-label="Send" />
            </MudPaper>
    </MudItem>    
</MudGrid>
</MudContainer>
@code {
